{
  "name": "airem",
  "version": "0.1.0",
  "description": "A TypeScript library for managing transactional workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "src/index.ts",
  "type": "module",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abura1han/airem.git"
  },
  "homepage": "https://github.com/abura1han/airem#readme",
  "bugs": {
    "url": "https://github.com/abura1han/airem/issues"
  }
}
